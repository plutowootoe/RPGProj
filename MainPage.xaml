<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WPFUI.MainPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="225"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Menu" BackgroundColor="Black"></Label>
        <Label Grid.Row="1" Grid.Column="0" Text="Player Data" BackgroundColor="DarkRed"></Label>
        <Label Grid.Row="1" Grid.Column="1" Text="Game Data" BackgroundColor="DarkGreen"></Label>
        <Label Grid.Row="2" Grid.Column="0" Text=" Inventory/Quests" BackgroundColor="DarkGoldenrod"></Label>
        <Label Grid.Row="2" Grid.Column="2" Text="Combat/Movement Controls" BackgroundColor="DarkMagenta"></Label>
    </Grid>


</ContentPage>

